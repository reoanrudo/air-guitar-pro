# WebSocketサーバー設定

# P2P用WebSocketサーバーURL（モバイルアプリ用）
EXPO_PUBLIC_P2P_WS_URL=ws://localhost:3002

# Web用WebSocketサーバーURL
EXPO_PUBLIC_WS_WEB_URL=ws://localhost:8080

# モバイル用WebSocketサーバーURL（ローカルネットワークのIP）
EXPO_PUBLIC_WS_MOBILE_URL=ws://10.239.209.208:8080

# タイムアウト設定（ミリ秒）

# WebSocket接続タイムアウト
EXPO_PUBLIC_WS_TIMEOUT=10000

# Ping間隔
EXPO_PUBLIC_PING_INTERVAL=30000

# 再接続間隔
EXPO_PUBLIC_RECONNECT_INTERVAL=3000
